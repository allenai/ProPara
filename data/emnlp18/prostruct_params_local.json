{
  "dataset_reader":{"type":"ProParaDatasetReader"},

  "train_data_path": "./data/emnlp18/grids.v1.dev.tsv",
  "validation_data_path": "./data/emnlp18/grids.v1.dev.tsv",
  "test_data_path": "./data/emnlp18/grids.v1.test.tsv",
  "evaluate_on_test": true,

  "model": {
    "type": "ProStructModel",

    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
        "trainable": false
      }
    },
    "use_attention": true,
    "seq2seq_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 102,
      "hidden_size": 50,
      "num_layers": 2,
      "dropout": 0.4
    },
    "seq2vec_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 102,
      "hidden_size": 50,
      "num_layers": 2,
      "dropout": 0.2
    },
    "span_end_encoder_after": {
      "type": "lstm",
      "input_size": 402,
      "hidden_size": 10,
      "num_layers": 1
    },
    "use_decoder_trainer": true,
    "decoder_beam_search": {
      "beam_size": 3
    },
    "other_configs": {
      "constraint_rules_to_turn_on": "1,1,1,1",
      "rule_2_fraction_participants": 0.5,
      "rule_3_fraction_steps": 0.5
    },
    "kb_configs": {
      "kb_coefficient": 0.5,
      "kb_to_use": "lexicalkb",
      "lexical_kb_path": "tests/fixtures/decoder_data/kbs/kb3/lexical-kb-v0.tsv",
      "fullgrid_prompts_load_path": "tests/fixtures/decoder_data/kbs/kb2/full-grids.tsv"
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentences", "num_fields"]],
    "batch_size" : 1
  },
  "trainer": {
    "num_epochs": 1,
    "grad_clipping": 1.0,
    "patience": 100,
    "validation_metric": "+type_accuracy",
    "cuda_device": -1,
    "optimizer": {
      "type": "adadelta",
      "rho": 0.9,
      "lr": 0.2
    }
  }
}
